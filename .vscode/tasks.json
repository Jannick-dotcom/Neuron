{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/inc/",
                "-x",
                "c++",
                "${workspaceFolder}/inc/*.cu",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/build/a.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: nvcc build active file",
            "command": "/usr/bin/nvcc",
            "args": [
                "-DuseGPU",
                "--expt-relaxed-constexpr",
                "-I${workspaceFolder}/inc/",
                "${workspaceFolder}/inc/layerV2.cu",
                "${workspaceFolder}/inc/networkV2.cu",
                "${workspaceFolder}/inc/feedThrough.cu",
                "${workspaceFolder}/src/main.cu",
                "${workspaceFolder}/inc/neuronTypes.cu",
                "-o",
                "${workspaceFolder}/build/a.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build for GPU"
        }
    ],
    "version": "2.0.0"
}